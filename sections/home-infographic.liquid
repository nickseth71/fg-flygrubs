{% if localization.country.iso_code == section.settings.location or section.settings.location == 'both'%}
<section class="Section" id="section-{{ section.id }}">
  <div class="Infographic__Wrap">
    <div class="Right">
      <div class="wrap">
        {%- if section.settings.title != blank -%}
          <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
        {%- endif -%}
        {%- if section.settings.link_text != blank -%}
          <a href="{{ section.settings.link_url }}" class="Button Button--primary">{{ section.settings.link_text | escape }}</a>
        {%- endif -%}
      </div>
    </div>
    <div class="Left">
      {% assign image_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
      <img class="Image--lazyLoad hide-no-js"
                data-src="{{ image_url }}"
                data-optimumx="1.2"
                data-widths="[400, 600, 800, 1000]"
                data-sizes="auto"
                alt="{{ section.settings.image.alt | escape }}">
      <noscript>
        <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.image.alt | escape }}">
      </noscript>
    </div>
  </div>
</section>
{% endif %}
{% schema %}
{
  "name": "Home Infographic",
  "settings": [
	{
      "type": "select",
      "id": "location",
      "label": "Location",
      "options": [
        {
          "value": "US",
          "label": "US"
        },
        {
          "value": "DE",
          "label": "DE"
        },
      {
          "value": "both",
          "label": "Both"
        }
      ],
      "default": "both"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Your HTML"
    },
    {
        "type": "text",
        "id": "subheading",
        "label": "Sub-heading",
        "default": "Sub-heading"
      },
    {
        "type": "text",
        "id": "link_text",
        "label": "Button text"
    },
    {
        "type": "url",
        "id": "link_url",
        "label": "Button URL"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Infographi",
        "info": "500 x 900px .Gif recommended"
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Home Infographic",
      "settings": {}
    }
  ]
}
{% endschema %}