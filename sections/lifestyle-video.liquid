{% if section.settings.enable == true %}
  <section
    class="Section"
    id="section-{{ section.id }}"
    data-section-id="{{ section.id }}"
    data-section-type="product-lifestyle">
    <div class="product-lifestyle-section">
      {% assign productLifeStyle = product.metafields.custom.lifestyle_video.value %}
      {% if productLifeStyle != blank %}
        {% if productLifeStyle.heading != blank %}
          <div class="section-header SectionHeader">
            <h3 class="heading SectionHeader__Heading Heading">{{ productLifeStyle.heading }}</h3>
          </div>
        {% endif %}
        <div class="product-lifestyle-wrap">
          <div class="pv-grid">
            {% include 'border-green' %}
            {% if productLifeStyle.video.value != blank %}
              <div class="video-icon-wrap">
                <video width="100%" height="100%">
                  <source src="{{ productLifeStyle.video | file_url }}" type="video/mp4">
                  <source src="{{ productLifeStyle.video | file_url }}" type="video/ogg">
                  Your browser does not support the video tag.
                </video>
                <img
                  class="video-play-icon"
                  src="https://cdn.shopify.com/s/files/1/0020/7595/1156/files/Group_803.png?v=1678688072"
                  loading="lazy" />
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
{% schema %}
  {
    "name": "Product Lifestyle Video",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable",
        "label": "Enable",
        "default": true
      }
    ],
    "presets": [
      {
        "category": "Image",
        "name": "Product Lifestyle Video",
        "settings": {}
      }
    ]
  }
{% endschema %}