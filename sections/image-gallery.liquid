{% if section.settings.enable == true %}
  <section
    class="Section"
    id="section-{{ section.id }}"
    data-section-id="{{ section.id }}"
    data-section-type="image-gallery">
    <div class="Container image-gallery-section">
      {% if product.metafields.custom.image_gallery != blank %}
        {% assign smData = product.metafields.custom.image_gallery.value %}
        {% if smData.heading != blank %}
          <div class="section-header SectionHeader SectionHeader--center">
            <h3 class="heading SectionHeader__Heading Heading">{{ smData.heading }}</h3>
          </div>
        {% endif %}
        <div class="image-gallery-wrap">
          <div class="ig-grid">
            {% for img in smData.image.value %}
              {% if img != blank %}
                <div class="ig-grid-item">
                  <img
                    src="{{ img | img_url: '400X400' }}"
                    width="400px"
                    height="400px"
                    loading="lazy" />
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
{% schema %}
  {
    "name": "Product Image Gallery",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable",
        "label": "Enable",
        "default": true
      }
    ],
    "presets": [
      {
        "category": "Image",
        "name": "Product Image Gallery",
        "settings": {}
      }
    ]
  }
{% endschema %}