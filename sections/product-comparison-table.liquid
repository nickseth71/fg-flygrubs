{% if section.settings.enable == true %}
  <section
    class="Section"
    id="section-{{ section.id }}"
    data-section-id="{{ section.id }}"
    data-section-type="product-comparison">
    <div class="Container product-comparison-section">
      {% assign productComparison = product.metafields.custom.comparison_table.value %}
      {% if productComparison != blank %}
        {% if productComparison.heading != blank %}
          <div class="section-header SectionHeader">
            <h3 class="heading SectionHeader__Heading Heading">{{ productLifeStyle.heading }}</h3>
          </div>
        {% endif %}
        <div class="product-comparison-wrap">
          {% if productComparison.comparison_content.value != blank %}
            <table>
              <tr>
                <th class="first-column"></th>
                <th class="second-column">Flygrubs</th>
                <th class="third-column">Other Brands</th>
              </tr>
              {% for contentt in productComparison.comparison_content.value %}
                {% assign contenttArr = contentt | split: '~' %}
                <tr>
                  <td class="first-column">{{ contenttArr[0] }}</td>
                  {% assign sdata = contenttArr[1] | downcase | strip %}
                  {% if sdata == 'yes' %}
                    <td class="second-column">
                      <svg
                        width="23"
                        height="16"
                        viewBox="0 0 23 16"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg">
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M23 2.81931L6.45324 16L0 7.56629L2.74208 5.37348L7.04424 10.9879L20.8253 0L23 2.81931Z"
                          fill="#F4F5F2" />
                      </svg>
                    </td>
                  {% else %}
                    <td class="second-column">{{ contenttArr[1] }}</td>
                  {% endif %}

                  {% assign thData = contenttArr[2] | downcase | strip %}
                  {% if thData == 'no' %}
                    <td class="third-column">
                      <svg
                        width="15"
                        height="15"
                        viewBox="0 0 15 15"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg">
                        <path d="M1.74422 0L7.5 5.75578L13.2558 0L15 1.74422L9.24422 7.5L15 13.2558L13.2558 15L7.5 9.24422L1.74422 15L0 13.2558L5.75578 7.5L0 1.74422L1.74422 0Z" fill="black" />
                      </svg>
                    </td>
                  {% else %}
                    <td class="third-column">{{ contenttArr[2] }}</td>
                  {% endif %}
                </tr>
              {% endfor %}
            {% endif %}
          </table>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}
{% schema %}
  {
    "name": "Product Comparison Table",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable",
        "label": "Enable",
        "default": true
      }
    ],
    "presets": [
      {
        "category": "Text",
        "name": "Product Comparison Table",
        "settings": {}
      }
    ]
  }
{% endschema %}